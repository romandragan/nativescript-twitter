{
    "compilerOptions": {
        "target": "ES2017",
        "module": "esnext",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": false,
        "declaration": true,
        "lib": [
            "es6",
            "dom"
        ],
        "skipLibCheck": true,
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        }
    },
    "exclude": [
        "demo",
        "demo-ng",
        "node_modules",
        "platforms",
        "**/*.aot.ts"
    ]
}